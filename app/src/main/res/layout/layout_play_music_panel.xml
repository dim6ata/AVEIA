<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutPlayMusic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20sp"
    android:layout_marginTop="2sp"
    android:layout_marginEnd="20sp"
    android:background="@drawable/gradient_dark_complete_horizontal"
    android:orientation="horizontal"
    android:padding="5sp"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/relPlay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="2sp">

        <ImageView
            android:id="@+id/playTheremin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:foregroundGravity="center_vertical"
            android:onClick="playThereminClick"
            android:src="@mipmap/ic_play_theremin"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/tv_ic_theremin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/playTheremin"
            android:fontFamily="@font/cormorant_infant"
            android:gravity="center"
            android:text="Theremin"
            android:textColor="@color/darky"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relPlay2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="2sp">

        <ImageView
            android:id="@+id/playXYPad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:foregroundGravity="center_vertical"
            android:onClick="playXYPadClick"
            android:src="@mipmap/ic_play_xypad"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/tv_ic_xyPad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/playXYPad"
            android:fontFamily="@font/cormorant_infant"
            android:gravity="center"
            android:text="X/Y Pad"
            android:textColor="@color/darky"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
