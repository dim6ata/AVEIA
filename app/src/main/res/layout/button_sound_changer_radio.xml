<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/soundPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_colour_silver_horizontal_inverted"
    android:orientation="vertical"
    android:gravity="bottom"
    android:visibility="visible"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/titleSoundChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:fontFamily="@font/cormorant_sc_medium"
        android:text="Select Synthesizer"
        android:textAlignment="center"
        android:textColor="@color/darky"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/soundChooserRadioGroup">

        <RadioButton
            android:id="@+id/sChanger_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/darky"
            android:fontFamily="@font/cormorant_infant"
            android:text="Triangle Wave"
            android:textSize="20dp"
            android:textColor="@color/darky" />
        <RadioButton
            android:id="@+id/sChanger_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/darky"
            android:fontFamily="@font/cormorant_infant"
            android:text="Sine Wave"
            android:textSize="20dp"
            android:textColor="@color/darky" />

        <RadioButton
            android:id="@+id/sChanger_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/darky"
            android:fontFamily="@font/cormorant_infant"
            android:text="SW Upper Harmonic"
            android:textSize="20dp"
            android:textColor="@color/darky" />

        <RadioButton
            android:id="@+id/sChanger_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/darky"
            android:fontFamily="@font/cormorant_infant"
            android:text="Square Wave"
            android:textSize="20dp"
            android:textColor="@color/darky" />

        <RadioButton
            android:id="@+id/sChanger_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/darky"
            android:fontFamily="@font/cormorant_infant"
            android:text="Harmonic Series 16"
            android:textSize="20dp"
            android:textColor="@color/darky" />

        <RadioButton
            android:id="@+id/sChanger_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/darky"
            android:fontFamily="@font/cormorant_infant"
            android:text="Harmonic Series 4"
            android:textSize="20dp"
            android:textColor="@color/darky" />


        <RadioButton
            android:id="@+id/sChanger_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/darky"
            android:fontFamily="@font/cormorant_infant"
            android:text="Analogue SAW"
            android:textSize="20dp"
            android:textColor="@color/darky" />
    </RadioGroup>
</LinearLayout>